#!/bin/bash

export LC_ALL="C"

#rofi -show combi 2>&1 | tee /tmp/rofi-run.log

#!/bin/bash

# Check if rofi is already running
if pgrep -x rofi >/dev/null; then
	# Kill it (this effectively closes Rofi)
	pkill -x rofi
else
	# Launch rofi
	# rofi -show drun
	rofi -show combi 2>&1 | tee /tmp/rofi-run.log
fi

exit 0
